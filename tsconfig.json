{
  "compilerOptions": {
    // Based on https://nodejs.org/docs/latest-v24.x/api/typescript.html#type-stripping
    "noEmit": true,
    "target": "esnext",
    "module": "nodenext",
    "rewriteRelativeImportExtensions": true,
    "erasableSyntaxOnly": true,
    "verbatimModuleSyntax": true,

    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["dist/**/*"]
}
